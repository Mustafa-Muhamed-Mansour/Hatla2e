<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img_item_product"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_5sdp"
            />


        <ImageView
            android:id="@+id/img_favorite_item_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_10sdp"
            />


        <TextView
            android:id="@+id/txt_name_item_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@id/img_item_product"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/txt_price_item_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_17ssp"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_below="@id/txt_name_item_product"
            />


    </RelativeLayout>
</layout>